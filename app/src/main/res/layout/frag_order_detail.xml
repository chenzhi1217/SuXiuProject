                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_order_detail_logo"
                    android:text="待付款订单"
                    android:textColor="@color/theme_bg"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_detail_state"
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_toRightOf="@+id/iv_order_detail_logo"
                    android:text="请注意客服来电，与您进一步确认维修信息"
                    android:textColor="@color/color_text_3"
                    android:textSize="@dimen/title_four"
                    android:textStyle="bold"/>


            </RelativeLayout>

            <!--订单详细信息-->
