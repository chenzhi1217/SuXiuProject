                        android:textColor="@color/color_black"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:layout_marginTop="5dp"
                        android:text="2018-02-03"/>

                </LinearLayout>

                <include layout="@layout/include_common_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/bottom_margin">
                    <!---->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="设备型号"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="联想e550"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--维修工程师-->
                    <RelativeLayout
                        
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="工程师工号"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:id="@+id/item_refund_record_pay_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="0029527"
                            android:textColor="@color/color_text_3"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--维修工程师联系方式-->
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="联系方式"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="18226189999"
                            android:textColor="@color/color_text_3"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--还款状态-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="故障描述"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:id="@+id/refund_record_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="外屏破碎"
                            android:textColor="@color/color_text_3"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--还款状态-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="维修方案"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="更换总成对换（质保180）"
                            android:textColor="@color/color_text_3"
                            android:textSize="@dimen/title_four"/>

                    </RelativeLayout>

                    <!--维修金额-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="维修金额"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="￥588"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/title_four"/>

                    </RelativeLayout>

                    <include layout="@layout/include_common_line"/>

                    <!--支付按钮-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/top_margin">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:background="@drawable/shape_user_info_bt"
                            android:paddingBottom="5dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:text="立即支付"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/title_four"/>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            
            <!--维修信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:background="@drawable/shape_corners_white"
                android:layout_marginTop="@dimen/top_margin"
                android:orientation="vertical">

                <!--头部信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_margin"
                        android:text="维修信息"
                        android:textColor="@color/color_black"
                        android:textSize="16dp"/>
                    

                </LinearLayout>

                <include layout="@layout/include_common_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/bottom_margin">
                    <!---->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="联系人"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="王思聪"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--维修工程师-->
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="联系电话"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="18226189999"
                            android:textColor="@color/color_text_3"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--维修工程师-->
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="服务地址"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="上海市杨浦区"
                            android:textColor="@color/color_text_3"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--维修工程师联系方式-->
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="服务地址"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="上海市浦东新区地铁10号线"
                            android:textColor="@color/color_text_3"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--还款状态-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="下单时间"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/right_margin"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="2018-01-08 17：32"
                            android:textColor="@color/color_text_3"
                            android:textSize="@dimen/title_four"/>


                    </RelativeLayout>

                    <!--还款状态-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_order_list_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/left_margin"
                            android:text="预约时间"
                            android:textColor="@color/color_text_2"
                            android:textSize="@dimen/title_four"/>

                        <TextView
                            android:layout_width="wrap_content"
