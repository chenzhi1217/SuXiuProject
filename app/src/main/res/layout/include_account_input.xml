<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/input_phone_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/input_phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"/>

            <com.esports.lib.view.ClearEditText
                android:id="@+id/input_phone_et"
                style="@style/LoginEditTextStyle"
                android:layout_toEndOf="@+id/input_phone_img"
                android:hint="请输入手机号"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"/>

            <ImageView
                android:id="@+id/input_phone_close_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_close"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/input_phone_img"
                android:background="@color/color_divider_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/input_verify_rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/input_verify_code_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"/>

            <EditText
                android:id="@+id/input_mail_et"
                android:layout_toEndOf="@+id/input_verify_code_img"
                android:hint="请输入验证码"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="6"/>

            <com.esports.lib.view.BorderTextView
                android:id="@+id/input_get_verify_tv"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x30"
                app:btv_isFill="false"
                app:btv_textColor="@color/color_f7585c"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:btv_textSize="@dimen/x12"
                app:strokeColor="@color/color_f7585c"
                app:text="获取验证码"
                android:textColor="@color/color_f7585c"
                app:cornerRadius="@dimen/x15"
                app:strokeWidth="@dimen/x1"/>

            <TextView
                android:id="@+id/input_verify_sec_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="20s"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/input_verify_code_img"
                android:background="@color/color_divider_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/input_pwd_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="5dp">

            <ImageView
                android:id="@+id/input_pwd_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/input_pwd_img"
                android:orientation="horizontal">

                <com.esports.lib.view.ClearEditText
                    android:id="@+id/input_pwd_et"
                    style="@style/LoginEditTextStyle"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="请输入登录密码"
                    android:inputType="textPassword"
                    android:paddingRight="@dimen/x7"/>

                <CheckBox
                    android:id="@+id/input_pwd_eyes_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@null"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/input_pwd_img"
                android:background="@color/color_divider_1"/>
        </RelativeLayout>
    </LinearLayout>
</layout>