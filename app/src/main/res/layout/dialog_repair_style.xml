<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="fragment" type="com.suxiunet.repair.businiss.home.view.PlaceOrderFragment"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_transparent"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="台式机"
                android:onClick="@{() ->fragment.setEquipModel(`台式机`)}"
                android:textSize="@dimen/title_two"
                android:textColor="@color/color_text_1"/>
            
            <include layout="@layout/include_common_line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="笔记本"
                android:textSize="@dimen/title_two"
                android:onClick="@{() ->fragment.setEquipModel(`笔记本`)}"
                android:textColor="@color/color_text_1"/>
            <include layout="@layout/include_common_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="服务器"
                android:textSize="@dimen/title_two"
                android:onClick="@{() ->fragment.setEquipModel(`服务器`)}"
                android:textColor="@color/color_text_1"/>

            <include layout="@layout/include_common_line"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="其它"
                android:onClick="@{() ->fragment.setEquipModel(`其它`)}"
                android:textSize="@dimen/title_two"
                android:textColor="@color/color_text_1"/>


        </LinearLayout>
    </LinearLayout>
</layout>