<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/fg_login_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/color_white"
                  android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/left_margin"
            android:paddingRight="@dimen/right_margin"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/fg_login_tab_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/fg_login_tab_account_rl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/fg_login_account_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="账号密码登录"
                        android:textColor="@color/color_text_1"
                        android:textSize="@dimen/x16"/>

                    <View
                        android:id="@+id/fg_login_account_line"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x2"
                        android:layout_below="@+id/fg_login_account_hint_tv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/x6"
                        android:background="@color/color_f7585c"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fg_login_tab_phone_rl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/fg_login_phone_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="手机动态码登录"
                        android:textColor="@color/color_text_3"
                        android:textSize="@dimen/x16"/>

                    <View
                        android:id="@+id/fg_login_phone_line"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x2"
                        android:layout_below="@+id/fg_login_phone_hint_tv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/x6"
                        android:background="@color/color_f7585c"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>

            <include
                android:id="@+id/fg_login_input_layout"
                layout="@layout/include_account_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fg_login_tab_ll"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <com.esports.lib.view.StyleButton
                android:id="@+id/fg_login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:gravity="center"
                android:onClick="@{presenter::onLogin}"
                android:text="登录"
                android:textColor="@color/color_text_white"
                android:textSize="@dimen/x16"
                app:backColor="@color/color_f7585c"
                app:backColorPress="@color/color_btn_main"
                app:fillet="true"
                app:radius="60"/>
            
        </RelativeLayout>
    </LinearLayout>
</layout>